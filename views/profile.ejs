<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <h1>Your Profile</h1>
    <div class="profile-container">
      <img src="<%= user.profileImage %>" alt="Profile Image" class="profile-image">
      <p>Username: <%= user.username %></p>
      <p>Email: <%= user.email %></p>

      <!-- Update Username Form -->
      <form action="/update-username" method="post">
        <label for="username">New Username:</label>
        <input type="text" id="username" name="username" required>
        <button type="submit">Update Username</button>
      </form>

      <!-- Update Password Form -->
      <form action="/update-password" method="post">
        <label for="current-password">Current Password:</label>
        <input type="password" id="current-password" name="currentPassword" required>
        <label for="new-password">New Password:</label>
        <input type="password" id="new-password" name="newPassword" required>
        <button type="submit">Update Password</button>
      </form>

      <!-- Change Profile Photo Form -->
      <form action="/update-profile-photo" method="post">
        <label for="profileImage">Choose New Profile Image:</label>
        <select id="profileImage" name="profileImage">
          <% images.forEach(image => { %>
            <option value="/images/anime-characters/<%= image %>"><%= image %></option>
          <% }) %>
        </select>
        <button type="submit">Update Profile Photo</button>
      </form>

      <!-- Logout Button -->
      <form action="/api/auth/logout" method="post">
        <button type="submit" class="hollow-button">Logout</button>
      </form>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>